      document.querySelector('.companyFormRegister').addEventListener('submit', function (event) {
        event.preventDefault(); // Evita que el formulario se envíe de forma predeterminada
        
        // Crear un objeto FormData a partir del formulario
        const formData = new FormData(event.target);
      
        // Validar que todos los campos requeridos estén completos
        const requiredFields = event.target.querySelectorAll('[required]');
        let valid = true;
      
        requiredFields.forEach(field => {
            // Si el campo está vacío o no tiene valor seleccionado
            if (!field.value.trim()) {
                valid = false;
                field.style.borderColor = "red"; // Resaltar el campo con borde rojo si está vacío
                field.insertAdjacentHTML('afterend', '<p style="color:red;">This field is required</p>'); // Mostrar mensaje
            } else {
                field.style.borderColor = ""; // Restaurar el borde si está completo
                const errorMessage = field.nextElementSibling;
                if (errorMessage && errorMessage.tagName === 'P') {
                    errorMessage.remove(); // Eliminar el mensaje de error si ya existe
                }
            }
        });
      
        // Si el formulario es inválido, detener el envío
        if (!valid) {
            return;
        }
      
        // Convertir FormData en un objeto JavaScript
        const formObject = {};
        formData.forEach((value, key) => {
            // Verificar si el valor ya existe para manejar los arrays (ej. checkboxes)
            if (formObject[key]) {
                if (!Array.isArray(formObject[key])) {
                    formObject[key] = [formObject[key]];
                }
                formObject[key].push(value);
            } else {
                formObject[key] = value;
            }
        });
      
        // Convertir el objeto a JSON
        const formDataJSON = JSON.stringify(formObject, null, 2);
      
        // Mostrar en consola para pruebas
        console.log(formDataJSON);
      
        // Aquí puedes realizar alguna acción con los datos, como enviarlos a un servidor
        // Ejemplo: fetch('your-server-endpoint', { method: 'POST', body: formDataJSON });
      });
      